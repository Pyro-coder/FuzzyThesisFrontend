{
  "name": "desktop",
  "version": "1.0.0",
  "description": "PCLR Exam Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-builder",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Noah Oppermann",
  "license": "ISC",
  "devDependencies": {
    "electron": "^30.0.6",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourdomain.desktop",
    "productName": "PCLR Exam",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "node_modules/**",
      "../**/*.py",
      "../templates/**",
      "../static/**",
      "../pclr_exam/dist/**"
    ],
    "extraResources": [
      {
        "from": "../pclr_exam/",
        "to": "./pclr_exam",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    }
  }
}
